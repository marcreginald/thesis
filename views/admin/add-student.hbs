{{> admin/head}}

<body class="animsition">
    <div class="page-wrapper">


        {{> admin/sidebar}}

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            {{> admin/navbar}}
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Student</strong>
                            <small> Form</small>
                        </div>
                        <div class="card-body card-block">
                            {{#if errorMessage}}
                            <div class="alert alert-danger" role="alert">
                                {{errorMessage}}
                            </div>
                            {{/if}}
                            <form action="/students-add" method="POST" class="form-horizontal">
                                <div class="form-group">
                                    <label for="firstName" class=" form-control-label">First Name</label>
                                    <input type="text" id="firstName" name="firstName"
                                        placeholder="Enter your First Name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="middleName" class=" form-control-label">Middle Name</label>
                                    <input type="text" id="middleName" name="middleName"
                                        placeholder="Enter your Middle Name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="lastName" class=" form-control-label">Last Name</label>
                                    <input type="text" id="lastName" name="lastName" placeholder="Enter your Last Name"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="email" class=" form-control-label">Email</label>
                                    <input type="text" id="email" name="email" placeholder="Enter your email"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="gender" class=" form-control-label">Gender</label>
                                    <select name="gender" id="gender" class="form-control">
                                        <option value="0">Please select your gender</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="address" class=" form-control-label">Address</label>
                                    <input type="text" id="address" name="address" placeholder="Enter your address"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="birthDate" class=" form-control-label">Birth Date</label>
                                    <input type="text" id="birthDate" name="birthDate"
                                        placeholder="Enter your birth date" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="school" class=" form-control-label">Accredited Assessment Center</label>
                                    <input type="hidden" id="assessmentCenterId" name="assessmentCenterId" value=""
                                        class="form-control" />
                                    <select id="school" name="school" onchange="getSelectedValue();"
                                        class="form-control">
                                        <option value="0">Select Assessment Center</option>
                                        {{#each aCenter}}
                                        <option value="{{centerName}}" id="{{id}}">{{centerName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{!-- This will get the id of the value and display in the input hidden  --}}
                                <script>
                                    function getSelectedValue() {
                                        var selectedValue = $("#school option:selected").attr("id")
                                        $("#assessmentCenterId").val(selectedValue);
                                    }
                                </script>

                                <div class="form-group">
                                    <label for="nc" class=" form-control-label">Assessment And Certification</label>
                                    <input type="hidden" id="specializationId" name="specializationId" value=""
                                        class="form-control" />
                                    <select id="nc" name="nc" onchange="getSelectedValueNC();" class="form-control">
                                        <option value="0">Select Assessment And Certification</option>
                                        {{#each specializtion}}
                                        <option value="{{specializationName}}" id="{{id}}">{{specializationName}}
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{!-- This will get the id of the value and display in the input hidden  --}}
                                <script>
                                    function getSelectedValueNC() {
                                        var selectedValue = $("#nc option:selected").attr("id")
                                        $("#specializationId").val(selectedValue);
                                    }
                                </script>

                                <div class="form-group">
                                    <label for="status" class=" form-control-label">Status</label>
                                    <select name="status" id="status" class="form-control">
                                        <option value="0">Please select status</option>
                                        <option value="1">Enrolled</option>
                                        <option value="2">Dropped</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fa fa-dot-circle-o"></i> Submit
                                    </button>
                                    <button type="reset" class="btn btn-danger btn-sm">
                                        <i class="fa fa-ban"></i> Reset
                                    </button>
                                </div>
                            </form>

                        </div>

                    </div>
                    <br />

                </div>

            </div>


        </div>
        <!-- END MAIN CONTENT-->
        <!-- END PAGE CONTAINER-->
    </div>

    </div>

    {{> admin/footer}}